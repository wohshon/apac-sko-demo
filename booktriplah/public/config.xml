<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />

    <!--
      The whitelist plugin will not allow <access origin="*" /> to permit cdvfile prefixes.
      The CDV file urls are used in the Drag & Drop template app to display photos from drafts.

      See: https://github.com/markmarijnissen/cordova-app-loader/issues/39
    -->
    <access origin="cdvfile://*"/>

    <!-- Default engines to restore -->
    <engine name="android" spec="~4.1.0" />
    <engine name="ios" spec="~3.9.0" />
    <engine name="wp8" spec="~3.8.1" />
    <engine name="windows8" spec="~4.0.0" />
    <!-- Preferences -->
    <preference name="DisallowOverscroll" value="true"/>
    <!-- core plugins -->
    <plugin name="cordova-plugin-device" spec="https://github.com/apache/cordova-plugin-device.git#rel/1.1.2" />
    <plugin name="cordova-plugin-network-information" spec="https://github.com/apache/cordova-plugin-network-information.git#rel/1.2.1" />
    <plugin name="cordova-plugin-battery-status" spec="https://github.com/apache/cordova-plugin-battery-status.git#rel/1.1.2" />
    <plugin name="cordova-plugin-device-motion" spec="https://github.com/apache/cordova-plugin-device-motion.git#rel/1.2.1" />
    <plugin name="cordova-plugin-device-orientation" spec="https://github.com/apache/cordova-plugin-device-orientation.git#rel/1.0.3" />
    <plugin name="cordova-plugin-geolocation" spec="https://github.com/apache/cordova-plugin-geolocation.git#rel/2.2.0" />
    <plugin name="cordova-plugin-file" spec="https://github.com/apache/cordova-plugin-file.git#rel/4.2.0" />
    <plugin name="cordova-plugin-camera" spec="https://github.com/apache/cordova-plugin-camera.git#rel/2.2.0" />
    <plugin name="cordova-plugin-media" spec="https://github.com/apache/cordova-plugin-media.git#rel/2.3.0" />
    <plugin name="cordova-plugin-media-capture" spec="https://github.com/apache/cordova-plugin-media-capture.git#rel/1.3.0" />
    <plugin name="cordova-plugin-file-transfer" spec="https://github.com/apache/cordova-plugin-file-transfer.git/#rel/1.5.1" />
    <plugin name="cordova-plugin-dialogs" spec="https://github.com/apache/cordova-plugin-dialogs.git#rel/1.2.1" />
    <plugin name="cordova-plugin-vibration" spec="https://github.com/apache/cordova-plugin-vibration.git#rel/2.1.1" />
    <plugin name="cordova-plugin-contacts" spec="https://github.com/apache/cordova-plugin-contacts.git#rel/2.1.0" />
    <plugin name="cordova-plugin-globalization" spec="https://github.com/apache/cordova-plugin-globalization.git#rel/1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="https://github.com/apache/cordova-plugin-inappbrowser.git#rel/1.4.0" />
    <plugin name="cordova-plugin-console" spec="https://github.com/apache/cordova-plugin-console.git#rel/1.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="https://github.com/apache/cordova-plugin-whitelist.git#rel/1.2.2" />
    <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen.git/#rel/3.2.2" />
    <plugin name="cordova-plugin-screen-orientation" spec="https://github.com/apache/cordova-plugin-screen-orientation" />
    <!-- default plugins -->
    <plugin name="com.feedhenry.plugins.apis" spec="https://github.com/fheng/fh-cordova-plugins-api.git#fh0.0.6" />
    <!-- optional plugins -->
    <plugin name="com.feedhenry.plugins.apkdownloader" spec="https://github.com/feedhenry/fh-cordova-plugin-apkdownloader.git#fh0.0.1" />
    <plugin name="cordova-sms-plugin" spec="https://github.com/cordova-sms/cordova-sms-plugin.git#v0.1.9" />
    <plugin name="cordova-plugin-statusbar" spec="https://github.com/apache/cordova-plugin-statusbar#rel/2.1.3" />
    <plugin name="com.feedhenry.plugin.device" spec="https://github.com/feedhenry/fh-cordova-plugin-device.git#fh0.0.2" />
    <plugin name="com.arnia.plugins.smsbuilder" spec="https://github.com/feedhenry/sms-builder.git#fh0.1.1" />
    <plugin name="com.feedhenry.plugins.ftputil" spec="https://github.com/feedhenry/fh-cordova-plugin-ftputil.git#fh0.0.1" />

</widget>
